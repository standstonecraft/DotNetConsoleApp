{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build src",
            "type": "process",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceFolder}/src/${workspaceFolderBasename}.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "--nologo"
            ],
            "problemMatcher": "$msCompile",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "build test",
            "type": "process",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceFolder}/test/${workspaceFolderBasename}.Test.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "--nologo"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "build",
            "dependsOn": [
                "build src",
                "build test"
            ],
            "dependsOrder": "sequence",
            "type": "shell",
            "command": "echo Hello",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "publish",
            "detail": "デバッグ情報なしで出力します。",
            "type": "process",
            "command": "dotnet",
            "args": [
                "publish",
                "${workspaceFolder}/src/${workspaceFolderBasename}.csproj",
                "/property:GenerateFullPaths=true",
                "/property:DebugType=None",
                "/property:DebugSymbols=false",
                "/consoleloggerparameters:NoSummary",
                "--nologo"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "clean test result",
            "type": "shell",
            "command": "Remove-Item ./test/TestResults -Recurse",
            "problemMatcher": [],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "run test",
            "type": "process",
            "command": "dotnet",
            "args": [
                "test",
                "${workspaceFolder}/test/${workspaceFolderBasename}.Test.csproj",
                "--settings",
                "test/unitTest.runsettings",
                "--collect:\"XPlat Code Coverage\"",
                "--nologo"
            ],
            "options": {
                "env": {
                    "DNCA_STAGE": "TEST"
                }
            },
            "group": "test"
        },
        {
            "label": "test report coverage",
            "type": "shell",
            "command": ".",
            "args": [
                "./exportCoverage.ps1"
            ],
            "options": {
                "cwd": "test"
            },
            "problemMatcher": [],
            "group": "test"
        },
        {
            "label": "test",
            "dependsOn": [
                "clean test result",
                "run test",
                "test report coverage"
            ],
            "dependsOrder": "sequence",
            "type": "shell",
            "command": "echo 'test task done'",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "clean build result",
            "type": "shell",
            "command": "Get-ChildItem */bin,*/obj | Remove-Item -Recurse",
            "problemMatcher": []
        }
    ]
}